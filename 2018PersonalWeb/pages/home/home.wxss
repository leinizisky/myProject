page {
  background: #f5f5f5;
}

.contain {
  margin: 10px;
}

.wrapper {
  background: #fff;
  border-radius: 4rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
}

.title .title-name {
  flex: 1;
}

.title .title-name text {
  font-weight: bold;
}

.title .title-name .icon {
  margin-right: 6rpx;
  color: #f90;
}

.content {
  font-size: 26rpx;
}

.basic-info dl {
  display: flex;
  height: 36px;
  line-height: 36px;
}

.basic-info dl dt {
  flex: 1;
}

.basic-info dl dd {
  flex: 4;
}

.same-list {
  padding-left: 7px;
}

.same-list .same {
  border-left: 1rpx solid #eee;
  color: #898989;
  padding-left: 10px;
  position: relative;
  padding-bottom: 10px;
}

.same-list .same:first-child {
  margin-top: 10px;
}

.same-list .time-icon {
  display: flex;
  width: 9px;
  height: 9px;
  border: 1px solid #f90;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  left: -6px;
  top: 4px;
}

.same-list .time-icon i {
  display: block;
  background: #f90;
  width: 5px;
  height: 5px;
  border-radius: 50%;
  margin: 2px;
}

.same-list .same text {
  display: block;
  margin-bottom: 10px;
}

.same-list .same .name {
  color: #000;
}
.skill-info .content{margin-top: 10px;padding-right: 10px;} 
.skill-list text,.skill-list progress{margin-bottom: 10px; display: block;}
.skill-list progress{height: 10px; }
